<% if user_signed_in? && current_user.activated == false %>
  <div class="alert alert-danger">
    <strong>Profilul nu este activat!</strong> Va rugam sa apasati <a href="/profiles/new">aici</a> pentru a activa profilul.
  </div>
  <% end %>
    <nav>
      <div class="topBar">
        <nav class="navbar navbar-default">
          <div class="container">
            <% if user_signed_in? %> Bine ai venit,
              <%= current_user.name %>
