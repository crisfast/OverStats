                <% if current_user.activated == true %> 
                <a href="/profiles/<%= current_user.profile.id %>">Profil</a>
              <% end %>
                  <% else %>
                    <a href="/users/sign_in">Autentificare</a> | <a href="/users/sign_up">Inregistrare</a> |
                    <% end %>

        </nav>
        </div>
      </div>
