<!DOCTYPE html>

<html>

<body>
    <%= render 'layouts/header'%>
        <%= yield %>
            <% if user_signed_in? %>
                <div class="container container-table" style="background: #fff; margin-top:20px; padding-top:15px; padding-bottom:15px;  ">
                    <% if @id.to_i == current_user.profile.id %>
                    <h3 style="display: flex; justify-content: center; align-items: center;">Editare Profil!</h3><br>
                        <div style="padding-top: 25px; display: flex; justify-content: center; align-items: center;">
                            
                            <%= form_tag("/profiles/#{@profil.id}", method: :put) do %>

                                 <input name="idProf" value="<%= current_user.profile.id%>" hidden> 
                                <div>
                                    BattleTag <input name="btInput" value="<%= @profil.battletag.gsub!('-','#')%>"><br><br>
                                </div>

                                <div>
                                    Regiune
                                    <select name="regiune">
                        <option value="eu">Europa</option>
                        <option value="us">America</option>
                    </select> <br><br>
                                </div>

                                <div>
                                    Platforma
                                    <select name="platforma">
                        <option value="pc">PC</option>
                        <option value="psn">PlayStation Network</option>
                        <option value="xbl">XBox Live</option>
                    </select> <br><br>
                                </div>

                                <input type="submit" value="Editare">
                                <% end %>
                                    <% else %>
                                        <div>
                                            <div class="alert alert-danger">
                                                <strong>Nu puteti modifica pofilul altcuiva!</strong> <a href="/"> Inapoi la site</a>
                                            </div>

                                        </div>
                        </div>
                        <% end %>
                            <% end %>
</body>
<html>